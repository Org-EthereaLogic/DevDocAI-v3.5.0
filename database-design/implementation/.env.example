# DevDocAI Database System Environment Variables
# Copy this file to .env and configure with your values

# System Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=
QDRANT_HTTPS=false

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
NEO4J_ENCRYPTED=false
NEO4J_TRUST=TRUST_ALL_CERTIFICATES

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=devdocai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_SSLMODE=prefer

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# Elasticsearch
ELASTICSEARCH_HOST=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_API_KEY=
ELASTICSEARCH_VERIFY_CERTS=false
ELASTICSEARCH_SSL_WARN=false

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
EMBEDDING_PROVIDER=openai
EMBEDDING_DEVICE=cpu

# HuggingFace Configuration (Optional)
HUGGINGFACE_API_KEY=

# Monitoring
METRICS_PORT=9090
LOG_FILE=./logs/devdocai.log
TRACING_ENABLED=false
TRACING_PROVIDER=jaeger
TRACING_ENDPOINT=http://localhost:14268/api/traces
TRACING_SAMPLE_RATE=0.1
HEALTH_PORT=8080

# Performance
MAX_WORKERS=10
THREAD_POOL_SIZE=20

# Security
API_KEYS_ENABLED=true
ENCRYPTION_ENABLED=true
CORS_ENABLED=true

# Backup
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=us-east-1

# AWS Credentials (for S3 backup)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Application Secrets
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=5000

# Feature Flags
FEATURE_SEMANTIC_SEARCH=true
FEATURE_REQUIREMENT_TRACING=true
FEATURE_MODULE_DEPENDENCIES=true
FEATURE_TEST_COVERAGE=true
FEATURE_IMPLEMENTATION_GUIDES=true
FEATURE_CONSISTENCY_CHECKING=true
FEATURE_ARCHITECTURE_QUERIES=true

# Development Settings
DEV_SEED_DATA=true
DEV_MOCK_SERVICES=false
DEV_HOT_RELOAD=true